---
import Topbar from "../components/Topbar.astro";
import "@/styles/global.css";
import * as process from "node:process";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="bg-zinc-800 text-white">
      <div class="min-h-screen">
        <div class="py-6 md:py-8 h-full">
          <div class="px-6 md:px-8 lg:px-32 xl:px-48 h-full">
            <Topbar />
            <slot />
          </div>
        </div>
      </div>
      <footer
        class="p-6 border-t border-t-zinc-600 text-zinc-300 flex flex-row justify-between"
      >
        <span>
          &copy; Team SMP {new Date().getFullYear().toString()}<br />This site
          is <a
            class="underline hover:text-emerald-300"
            href="https://github.com/teamsmp/waystone"
            target="_blank">available on GitHub</a
          > and licensed under the <a
            class="underline hover:text-emerald-300"
            href="https://www.gnu.org/licenses/gpl-3.0.en.html#license-text"
            target="_blank">GNU General Public License v3.0</a
          >
        </span>
        <span class="text-zinc-500">
          waystone {process.env.WAYSTONE_INSTANCE || "dev"}
        </span>
      </footer>
    </div>
  </body>
</html>
