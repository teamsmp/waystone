---
import { buttonVariants } from "./ui/button";
import { cn } from "@/lib/utils"
---

<div class="h-96 bg-[url(/hero-image.avif)] bg-cover bg-bottom mb-2">
  <div class="backdrop-blur-sm backdrop-brightness-75 h-full">
    <div class="flex flex-col w-full gap-4 h-full justify-center">
      <div class="mx-auto lg:text-7xl text-4xl md:text-6xl xl:text-8xl font-five text-center">TEAM SMP</div>
      <div class="mx-auto flex flex-row">
        <a class={cn(buttonVariants({ variant: "default" }), "font-mono text-xl")} href="/join">Join</a>
      </div>
    </div>
  </div>
</div>
